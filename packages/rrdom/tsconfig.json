{
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "error"
  },
  "references": [
    {
      "path": "../rrweb-snapshot"
    },
    {
      "path": "../types"
    }
  ],
  "exclude": ["test", "vite.config.ts", "vitest.config.ts"],
  "include": ["src"]
}
