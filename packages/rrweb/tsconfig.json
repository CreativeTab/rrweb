{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "rootDir": "src",
    "lib": ["es6", "dom"],
    "downlevelIteration": true,
    "importsNotUsedAsValues": "error",
    "strictBindCallApply": true,
    "composite": true,
    "types": [
      "vite/client",
      "@types/dom-mediacapture-transform",
      "@types/offscreencanvas",
      /*
       * @see https://vitest.dev/config/#globals
       * if we remove the --globals flag from the vite test command, we can remove this
       * to remove the flag, we need to add vitest imports in the test files
       */
      "vitest/globals"
    ]
  },
  "references": [
    {
      "path": "../types"
    },
    {
      "path": "../rrdom"
    },
    {
      "path": "../rrweb-snapshot"
    }
  ],
  "exclude": ["test", "scripts", "vite.config.ts"],
  "include": [
    "src",
    "node_modules/@types/css-font-loading-module/index.d.ts",
    "node_modules/@types/jest-image-snapshot/index.d.ts"
  ]
}
