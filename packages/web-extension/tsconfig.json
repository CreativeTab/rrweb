{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "strict": true,
    "esModuleInterop": true,
    "incremental": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "~/*": ["src/*"]
    },
    "jsx": "react-jsx"
  },
  "exclude": ["dist", "node_modules", "vite.config.ts"],
  "references": [
    {
      "path": "../rrweb"
    },
    {
      "path": "../rrweb-player"
    },
    {
      "path": "../types"
    }
  ]
}
